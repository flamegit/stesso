<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_16">

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_4a_bg"
            android:paddingLeft="@dimen/padding_12"
            android:paddingTop="@dimen/padding_4"
            android:paddingRight="@dimen/padding_12"
            android:paddingBottom="@dimen/padding_4"
            android:text="取消订单"
            android:textColor="@color/font_4A"
            android:textSize="@dimen/txt_13" />

        <TextView
            android:id="@+id/pay_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_32"
            android:background="@drawable/solid_red_bg"
            android:paddingLeft="@dimen/padding_12"
            android:paddingTop="@dimen/padding_4"
            android:paddingRight="@dimen/padding_12"
            android:paddingBottom="@dimen/padding_4"
            android:text="继续支付"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_13" />

    </LinearLayout>

    <TextView
        android:id="@+id/state_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_4a_bg"
        android:paddingLeft="@dimen/padding_12"
        android:paddingTop="@dimen/padding_4"
        android:paddingRight="@dimen/padding_12"
        android:paddingBottom="@dimen/padding_4"
        android:text="取消订单"
        android:textColor="@color/font_4A"
        android:textSize="@dimen/txt_13" />

    <TextView
        android:layout_gravity="right"
        android:text="dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
