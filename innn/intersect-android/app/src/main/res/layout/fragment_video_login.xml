<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.tmmt.innersect.ui.activity.BaseActivity">

    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:padding="@dimen/padding_16"
            android:id="@+id/close_view"
            android:src="@mipmap/white_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="@dimen/padding_16"
            android:id="@+id/silent_view"
            android:src="@mipmap/sound_close"
            android:layout_gravity="bottom|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/fullscreen"
            android:padding="@dimen/padding_16"
            android:src="@mipmap/full_screen"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <LinearLayout

        android:padding="@dimen/padding_32"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="欢迎来到innersect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone_login"
            android:layout_marginTop="@dimen/padding_32"
            android:padding="@dimen/padding_8"
            android:background="@color/homeBg"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="手机号登录"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:padding="@dimen/padding_16"
            android:layout_gravity="center"
            android:textColor="@android:color/secondary_text_dark"
            android:text="其他方式登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:paddingBottom="@dimen/padding_16"
            android:paddingTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/qq_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_qq"/>

            <ImageView
                android:id="@+id/wechat_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_wechat"/>

            <ImageView
                android:id="@+id/sina_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_sina"/>

            <ImageView
                android:id="@+id/fb_login"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_fb"/>
        </LinearLayout>

        <TextView
            android:id="@+id/contract_view"
            android:padding="@dimen/padding_16"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_dark"
            android:text="注册即代表同意INNERSECT服务条款"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
