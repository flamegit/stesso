<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmmt.innersect.ui.activity.ModifyNameActivity">

    <include layout="@layout/common_top_bar"/>

    <LinearLayout
        android:padding="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user_name"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="20"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/clear_text"
            android:id="@+id/clear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_1"
        android:background="@drawable/divider_bg"/>

</LinearLayout>
