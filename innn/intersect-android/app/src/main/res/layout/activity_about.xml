<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmmt.innersect.ui.activity.AboutActivity">

    <include layout="@layout/common_title_bar"/>

    <ImageView
        android:layout_marginTop="@dimen/padding_32"
        android:layout_gravity="center"
        android:src="@mipmap/innersect_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/txt_18"
        android:textColor="#bebebe"
        android:id="@+id/version_view"
        android:paddingTop="@dimen/padding_16"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#cecece"
        android:id="@+id/code_view"
        android:paddingTop="@dimen/padding_16"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <FrameLayout
        android:padding="@dimen/padding_16"
        android:id="@+id/purpose_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/privacy_policy"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/chevron_right"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <View
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_1"
        android:background="@drawable/divider_bg"/>
    
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:paddingBottom="@dimen/padding_32"
        android:layout_gravity="center"
        android:textColor="@android:color/secondary_text_dark"
        android:text="礼高文化传播（上海）有限公司"
        android:drawablePadding="@dimen/padding_4"
        android:drawableLeft="@mipmap/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
