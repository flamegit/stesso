<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_16"
    android:paddingBottom="@dimen/padding_16">

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@drawable/check_box_bg"
        android:gravity="center" />

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/padding_8"
        android:layout_toRightOf="@id/check_box"
        android:scaleType="centerInside"
        android:src="@drawable/umeng_socialize_facebook" />

    <LinearLayout
        android:layout_marginLeft="@dimen/padding_8"
        android:layout_alignTop="@id/icon_view"
        android:layout_toRightOf="@id/icon_view"
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="adidas" />

        <TextView
            android:id="@+id/quantity_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x3" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/padding_8"
        android:layout_toRightOf="@id/icon_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/color_view"
            android:layout_width="@dimen/padding_16"
            android:layout_height="@dimen/padding_16"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/size_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_8"
            android:text="M" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLines="2"
            android:text="第八号店铺" />

    </LinearLayout>

</RelativeLayout>

