<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_16"
    android:paddingTop="@dimen/padding_16">

    <ImageView
        android:background="@color/blackBackground"
        android:id="@+id/icon_view"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/check_box"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/padding_8"
        android:layout_alignTop="@id/icon_view"
        android:layout_toRightOf="@id/icon_view"
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="adidas" />

        <TextView
            android:layout_marginLeft="@dimen/padding_32"
            android:id="@+id/quantity_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x3" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/padding_8"
        android:layout_toRightOf="@id/icon_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon_view"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:id="@+id/color_view"
            android:layout_width="@dimen/padding_2"
            android:layout_height="@dimen/padding_16"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/size_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:visibility="invisible"
            android:layout_marginLeft="@dimen/padding_8"
            android:id="@+id/pre_sale"
            android:padding="@dimen/padding_4"
            android:background="@drawable/stroke_black_bg"
            android:text="预售"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLines="2"
            android:text="第八号店铺" />

    </LinearLayout>

</RelativeLayout>

