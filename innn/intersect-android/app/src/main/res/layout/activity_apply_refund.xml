<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmmt.innersect.ui.activity.AboutActivity">

    <include layout="@layout/common_top_image"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:background="@drawable/top_line_bg"
        android:padding="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/refund_view"
            android:layout_marginRight="@dimen/padding_8"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="申请退货退款"
            android:background="@drawable/stroke_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/exchange_view"
            android:layout_marginLeft="@dimen/padding_8"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="申请换货"
            android:background="@drawable/stroke_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <!--<FrameLayout-->
        <!--android:id="@+id/content_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</FrameLayout>-->

</LinearLayout>
