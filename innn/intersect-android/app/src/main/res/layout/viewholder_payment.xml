<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop"
        android:src="@drawable/umeng_socialize_facebook" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp">

        <TextView
            android:id="@+id/des_view"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="第八号店铺" />

        <TextView
            android:id="@+id/name_view"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/des_view"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="颜色：黑色；尺码：29" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/des_view"
            android:id="@+id/quantity_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 308.00"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/name_view"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/color_view"
                android:layout_width="@dimen/padding_16"
                android:layout_height="@dimen/padding_16"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:paddingLeft="@dimen/padding_4"
                android:id="@+id/size_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"

                />

            <TextView
                android:textStyle="italic"
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/price_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="第八号店铺" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

