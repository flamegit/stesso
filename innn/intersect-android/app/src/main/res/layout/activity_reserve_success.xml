<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tmmt.innersect.ui.activity.ReserveSuccessActivity">

    <include layout="@layout/common_top_bar"/>

    <TextView
        android:textSize="@dimen/txt_24"
        android:gravity="center"
        android:id="@+id/order_view"
        android:text="第0位中签"
        android:textStyle="bold"
        android:padding="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/name_view"
        android:paddingLeft="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/padding_16"
        android:layout_marginLeft="@dimen/padding_32"
        android:layout_marginRight="@dimen/padding_32"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginBottom="@dimen/padding_32"
        android:id="@+id/hint_view"
        android:textColor="@android:color/secondary_text_dark"
        android:text="请在2017年11月9日前，前往成都juice店：成都远洋太古里，凭借个人手机号及ID购买活动商品。"
        android:padding="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/check_view"
        android:gravity="center"
        android:layout_margin="@dimen/padding_8"
        android:background="@drawable/stroke_black"
        android:text="@string/check_info"
        android:padding="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
