<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_16"
    android:paddingBottom="@dimen/padding_16"
    tools:context="com.tmmt.innersect.ui.activity.AboutActivity">

    <ImageView
        android:id="@+id/transport_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/shop_view"
        app:srcCompat="@mipmap/car" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="选择提货方式"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/close_icon" />

    <ImageView
        android:id="@+id/shop_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@mipmap/house" />

    <View
        android:background="@color/colorLine"
        android:id="@+id/textView8"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/hint_view1"
        app:layout_constraintEnd_toStartOf="@+id/transport_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shop_view"
        app:layout_constraintTop_toTopOf="@+id/shop_view" />

    <TextView
        android:id="@+id/style_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="门店自提"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/shop_view"
        app:layout_constraintStart_toStartOf="@+id/shop_view"
        app:layout_constraintTop_toBottomOf="@+id/shop_view" />

    <TextView
        android:id="@+id/style_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="邮寄给我"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/transport_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/transport_view"
        app:layout_constraintTop_toBottomOf="@+id/transport_view" />

    <TextView
        android:id="@+id/hint_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="立即提货免邮费"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/txt_10"
        app:layout_constraintEnd_toEndOf="@+id/style_view1"
        app:layout_constraintStart_toStartOf="@+id/style_view1"
        app:layout_constraintTop_toBottomOf="@+id/style_view1" />

    <TextView
        android:id="@+id/hint_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="立即提货免邮费"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/txt_10"
        app:layout_constraintEnd_toEndOf="@+id/style_view2"
        app:layout_constraintStart_toStartOf="@+id/style_view2"
        app:layout_constraintTop_toBottomOf="@+id/style_view2" />

</android.support.constraint.ConstraintLayout>
