<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_8"

    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/show_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8">

        <TextView
            android:textStyle="bold"
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/left_decorate"
            android:drawablePadding="@dimen/padding_4"
            android:text="POP UP进行中" />

        <TextView
            android:id="@+id/show_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawablePadding="@dimen/padding_4"
            android:drawableRight="@mipmap/chevron_right"
            android:text="查看全部"
            android:textColor="@android:color/secondary_text_dark" />

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:padding="@dimen/padding_8"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <com.tmmt.innersect.widget.CirclePageIndicator
        android:id="@+id/pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/padding_4"
        android:padding="@dimen/padding_16"
        app:pageColor="@android:color/darker_gray"
        app:fillColor="@color/homeBg"/>

</LinearLayout>
