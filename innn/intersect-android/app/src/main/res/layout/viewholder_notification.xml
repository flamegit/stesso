<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_16"
    android:paddingBottom="@dimen/padding_16"
    android:layout_height="wrap_content">


    <TextView
        android:paddingBottom="@dimen/padding_16"
        android:drawableLeft="@mipmap/service_message"
        android:drawablePadding="@dimen/padding_8"
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客服消息"
        android:textStyle="bold" />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/chevron_right" />

    <ImageView
        android:layout_below="@id/title_view"
        android:id="@+id/icon_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/custom_message" />

    <TextView
        android:id="@+id/message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_view"
        android:layout_alignTop="@id/icon_view"
        android:paddingLeft="@dimen/padding_8"
        android:text="客服消息"
         />

    <TextView
        android:paddingLeft="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:paddingTop="@dimen/padding_4"
        android:layout_alignLeft="@id/message_view"
        android:layout_below="@id/message_view"
        android:id="@+id/count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看全部" />

    <TextView
        android:textColor="@color/gray_text"
        android:paddingLeft="@dimen/padding_8"
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/message_view"
        android:layout_alignBottom="@id/icon_view"
        android:text="2018.3.4. 19:00"
        android:textSize="@dimen/txt_10" />

</RelativeLayout>

